{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    "outDir": "dist",
    "rootDir": ".",

    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "server.ts",
    "lib/**/*.ts",
    "api/**/*.ts",
    "routes/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "logs",
    "**/*.log",
    "**/*.bak",
    "**/*.bak-*",
    "**/*.test.ts",
    "api/mews/**/*"
  ]
}